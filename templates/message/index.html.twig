{% extends '../user_profile/base.html.twig' %}

{% block title %}Discussion{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto p-6 bg-white rounded shadow">
        <h2 class="text-xl font-semibold mb-4">Discussion autour de : {{ annonce.titre }}</h2>

        <div class="space-y-4 mb-6">
            {% for message in messages %}
                <div class="p-3 border rounded {% if message.sender == app.user %}bg-blue-100 text-right{% else %}bg-gray-100 text-left{% endif %}">
                    <strong>{{ message.sender.username }}</strong> : {{ message.content }}
                    <div class="text-xs text-gray-500">{{ message.createdAt|date('d/m/Y H:i') }}</div>
                </div>
            {% else %}
                <p class="text-gray-500">Aucun message pour le moment.</p>
            {% endfor %}
        </div>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="mt-2 bg-blue-600 text-white px-4 py-2 rounded">Envoyer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
