{# templates/admin/contact_message_reply.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <div class="max-w-2xl mx-auto shadow-md rounded-lg p-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">
            Répondre au message de <span class="text-blue-600">{{ contactMessage.email }}</span>
        </h1>

        <div class="mb-4">
            <p class="text-sm text-gray-600 mb-1 font-semibold">Sujet :</p>
            <p class="bg-gray-100 p-3 rounded">{{ contactMessage.sujet }}</p>
        </div>

        <div class="mb-6">
            <p class="text-sm text-gray-600 mb-1 font-semibold">Message reçu :</p>
            <p class="bg-gray-100 p-3 rounded">{{ contactMessage.message }}</p>
        </div>

        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
        <div>
            {{ form_label(form.reply, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.reply, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-200'}}) }}
            {{ form_errors(form.reply) }}
        </div>

        <button type="submit" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-5 py-2 rounded-lg transition">
            Envoyer la réponse
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
