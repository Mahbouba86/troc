{% extends 'base.html.twig' %}

{% block title %}Mes annonces{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto px-4 py-10">
        <div class="flex items-center justify-between mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Mes annonces</h1>
            <a href="{{ path('annonce_new') }}"
               class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition">
                + Créer une annonce
            </a>
        </div>

        {% if annonces is empty %}
            <div class="bg-yellow-100 border border-yellow-300 text-yellow-800 p-6 rounded-lg text-center">
                Vous n'avez pas encore publié d'annonce.
            </div>
        {% else %}
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                {% for annonce in annonces %}
                    <div class="bg-white rounded-lg shadow overflow-hidden">
                        <img src="{{ asset('uploads/images/' ~ annonce.image) }}"
                             alt="{{ annonce.titre }}"
                             class="w-full h-48 object-cover">

                        <div class="p-4 space-y-2">
                            <h2 class="text-lg font-semibold text-gray-800">{{ annonce.titre }}</h2>
                            <p class="text-gray-600 text-sm">{{ annonce.ville }}</p>
                            <p class="text-sm text-gray-500">{{ annonce.createdAt|date('d/m/Y') }}</p>
                            <span class="inline-block px-2 py-1 text-xs font-medium rounded-full
                                {% if annonce.status.value == 'Available' %}
                                    bg-green-100 text-green-800
                                {% elseif annonce.status.value == 'Reserved' %}
                                    bg-yellow-100 text-yellow-800
                                {% elseif annonce.status.value == 'Finished' %}
                                    bg-gray-200 text-gray-600
                                {% else %}
                                    bg-red-100 text-red-700
                                {% endif %}
                            ">
                                {{ annonce.status.value }}
                            </span>

                            <div class="pt-4 flex gap-2">
                                <a href="{{ path('annonce_show', { id: annonce.id }) }}"
                                   class="text-blue-600 hover:underline text-sm font-medium">Voir</a>
                                <a href="{{ path('annonce_edit', { id: annonce.id }) }}"
                                   class="text-yellow-600 hover:underline text-sm font-medium">Modifier</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
