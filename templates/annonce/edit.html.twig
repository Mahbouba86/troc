{% extends '../user_profile/base.html.twig' %}

{% block title %}Modifier l'annonce{% endblock %}

{% block body %}
    <div class="max-w-xl mx-auto p-6">
        <div class="text-center mb-10">
            <h1 class="text-3xl font-bold text-gray-900">
                Modifier votre annonce<br>
                <span class="text-blue-600">en toute simplicité</span>
            </h1>
        </div>

        {{ form_start(form, {'attr': {'class': 'space-y-6', 'enctype': 'multipart/form-data'}}) }}

        {{ form_errors(form) }}

        <div class="flex flex-col gap-2">
            <label class="font-semibold text-sm text-gray-700">Titre</label>
            {{ form_widget(form.titre, {'attr': {
                'placeholder': "Ex : Donne cours de maths",
                'class': 'px-4 py-2 rounded-lg border border-gray-300 bg-gray-100 focus:ring-2 focus:ring-blue-500 text-sm'
            }}) }}
            {{ form_errors(form.titre) }}
        </div>

        <div class="flex flex-col gap-2">
            <label class="font-semibold text-sm text-gray-700">Description</label>
            {{ form_widget(form.description, {'attr': {
                'placeholder': "Décrivez votre annonce...",
                'class': 'px-4 py-2 rounded-lg border border-gray-300 bg-gray-100 focus:ring-2 focus:ring-blue-500 text-sm'
            }}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="flex flex-col gap-2">
            <label class="font-semibold text-sm text-gray-700">Ville</label>
            {{ form_widget(form.ville, {'attr': {
                'placeholder': 'Ex : Paris',
                'class': 'px-4 py-2 rounded-lg border border-gray-300 bg-gray-100 focus:ring-2 focus:ring-blue-500 text-sm'
            }}) }}
            {{ form_errors(form.ville) }}
        </div>

        <div class="flex flex-col gap-2">
            <label class="font-semibold text-sm text-gray-700">Catégorie</label>
            {{ form_widget(form.category, {'attr': {
                'class': 'px-4 py-2 rounded-lg border border-gray-300 bg-white focus:ring-2 focus:ring-blue-500 text-sm'
            }}) }}
            {{ form_errors(form.category) }}
        </div>

        {# ----------- PHOTOS MULTIPLES (upload) ----------- #}
        <div class="flex flex-col gap-2">
            <label class="font-semibold text-sm text-gray-700">Photos</label>
            {{ form_widget(form.photos, {'attr': {
                'multiple': true,
                'class': 'block w-full text-sm text-gray-700 border border-gray-300 rounded-lg bg-white p-2'
            }}) }}
            {{ form_errors(form.photos) }}
        </div>

        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg text-center">
            Enregistrer les modifications
        </button>

        {{ form_end(form) }}
    </div>
{% endblock %}
