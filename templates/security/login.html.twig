{% extends '../user_profile/base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto p-6 mt-10">
        <h1 class="text-2xl font-bold mb-6 text-center">Connexion</h1>

        {% if error %}
            <div class="bg-red-100 text-red-700 p-3 rounded mb-4">
                Identifiants incorrects.
            </div>
        {% endif %}

        <form method="post" class="space-y-6">
            <div>
                <label class="block text-sm font-medium text-gray-700">Username</label>
                <input type="username" name="_username" value="{{ last_username }}" required autofocus
                       class="w-full px-4 py-2 rounded-lg border border-gray-300 bg-gray-100 focus:ring-2 focus:ring-blue-500 text-sm">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Mot de passe</label>
                <input type="password" name="_password" required
                       class="w-full px-4 py-2 rounded-lg border border-gray-300 bg-gray-100 focus:ring-2 focus:ring-blue-500 text-sm">
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg text-center">
                Se connecter
            </button>
        </form>
    </div>
{% endblock %}
