{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="max-w-xl mx-auto p-6">
        <div class="text-center mb-10">
            <h1 class="text-3xl font-bold text-gray-900">
                Contactez-nous<br>
                <span class="text-blue-600">une question ? un souci ?</span>
            </h1>
        </div>

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        <div class="flex flex-col gap-2">
            <label class="font-semibold text-sm text-gray-700">Nom</label>
            {{ form_widget(form.nom, {
                'attr': {
                    'placeholder': 'Votre nom',
                    'class': 'px-4 py-2 rounded-lg border border-gray-300 bg-gray-100 focus:ring-2 focus:ring-blue-500 text-sm'
                }
            }) }}
            {{ form_errors(form.nom) }}
        </div>

        <div class="flex flex-col gap-2">
            <label class="font-semibold text-sm text-gray-700">Email</label>
            {{ form_widget(form.email, {
                'attr': {
                    'placeholder': 'exemple@mail.com',
                    'class': 'px-4 py-2 rounded-lg border border-gray-300 bg-gray-100 focus:ring-2 focus:ring-blue-500 text-sm'
                }
            }) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="flex flex-col gap-2">
            <label class="font-semibold text-sm text-gray-700">Sujet</label>
            {{ form_widget(form.sujet, {
                'attr': {
                    'placeholder': 'Sujet du message',
                    'class': 'px-4 py-2 rounded-lg border border-gray-300 bg-gray-100 focus:ring-2 focus:ring-blue-500 text-sm'
                }
            }) }}
            {{ form_errors(form.sujet) }}
        </div>

        <div class="flex flex-col gap-2">
            <label class="font-semibold text-sm text-gray-700">Message</label>
            {{ form_widget(form.message, {
                'attr': {
                    'placeholder': 'Votre message...',
                    'rows': 6,
                    'class': 'px-4 py-2 rounded-lg border border-gray-300 bg-gray-100 focus:ring-2 focus:ring-blue-500 text-sm'
                }
            }) }}
            {{ form_errors(form.message) }}
        </div>

        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg text-center">
            Envoyer le message
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
