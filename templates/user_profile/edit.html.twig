{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto mt-12 bg-white p-8 rounded-xl shadow-md">
        <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">
            Modifier mon profil
        </h1>

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                {{ form_label(form.username, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.username, {'attr': {'class': 'mt-1 block w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.username) }}
            </div>

            <div>
                {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div>
                {{ form_label(form.phoneNumber, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.phoneNumber, {'attr': {'class': 'mt-1 block w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.phoneNumber) }}
            </div>

            <div>
                {{ form_label(form.address, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.address, {'attr': {'class': 'mt-1 block w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.address) }}
            </div>

            <div>
                {{ form_label(form.ville, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.ville, {'attr': {'class': 'mt-1 block w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.ville) }}
            </div>

            <div>
                {{ form_label(form.codePostal, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.codePostal, {'attr': {'class': 'mt-1 block w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.codePostal) }}
            </div>
        </div>

        <div class="pt-6">
            <button class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition">
                Enregistrer les modifications
            </button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
