{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    <div class="max-w-xl mx-auto p-6">
        <h1 class="text-2xl font-bold text-gray-900 mb-6">Modifier mon profil</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

        <div>
            {{ form_label(form.username) }}
            {{ form_widget(form.username, {'attr': {'class': 'form-input'}}) }}
            {{ form_errors(form.username) }}
        </div>

        <div>
            {{ form_label(form.phoneNumber) }}
            {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-input'}}) }}
            {{ form_errors(form.phoneNumber) }}
        </div>

        <div>
            {{ form_label(form.address) }}
            {{ form_widget(form.address, {'attr': {'class': 'form-input'}}) }}
            {{ form_errors(form.address) }}
        </div>

        <button class="mt-4 w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700">Enregistrer</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
